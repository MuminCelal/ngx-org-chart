{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../lib",
    "target": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  }
}
